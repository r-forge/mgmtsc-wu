plot(dates,b.gdp[,1],type="l",col=2)
lines(dates,b.gdp[,5],col=3)
legend("bottomright",countries[c(1,5)],fill=c(2,3),col=c(2,3))
@ 
\caption{Vergleich Österreich-Deutschland}
\label{fig:vgoede}
\end{figure}

